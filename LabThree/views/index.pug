doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Todo List
    style.
      .todo {
        margin-bottom: 10px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
      .todo-yes {
        background-color: #d4edda; 
      }
      .todo-no {
        background-color: #f8d7da;
      }
  body
    h1 Todo List
    each todo in todos
      .todo(class=(todo.done === 'Yes' ? 'todo-yes' : 'todo-no'))
        h2= todo.title
        p= "Done: " + todo.done
